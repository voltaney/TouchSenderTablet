{
    "LocalSettingsOptions": {
        "ApplicationDataFolder": "TouchSenderTablet/ApplicationData",
        "LocalSettingsFile": "LocalSettings.json"
    },
    "Logging": {
        "NLog": {
            "IncludeScopes": false,
            "ParseMessageTemplates": true,
            "CaptureMessageProperties": true
        }
    },
    "NLog": {
        "autoreload": false,
        "internalLogLevel": "Info",
        "internalLogFile": "${userLocalApplicationDataDir}/TouchSenderTablet/nlog_internal.log",
        "throwConfigExceptions": true,
        "targets": {
            "file": {
                "type": "AsyncWrapper",
                "target": {
                    "File": {
                        "type": "File",
                        "fileName": "${specialfolder:folder=LocalApplicationData:cached=true}/TouchSenderTablet/app.log",
                        "archiveAboveSize": 100000,
                        "maxArchiveFiles": 1,
                        "layout": {
                            "type": "JsonLayout",
                            "Attributes": [
                                {
                                    "name": "timestamp",
                                    "layout": "${date:format=yyyy-MM-ddTHH\\:mm\\:ss.ffffff}"
                                },
                                {
                                    "name": "level",
                                    "layout": "${level}"
                                },
                                {
                                    "name": "logger",
                                    "layout": "${logger}"
                                },
                                {
                                    "name": "message",
                                    "layout": "${message:raw=true}"
                                },
                                {
                                    "name": "properties",
                                    "encode": false,
                                    "layout": {
                                        "type": "JsonLayout",
                                        "includeallproperties": "true"
                                    }
                                },
                                {
                                    "name": "exception",
                                    "encode": false,
                                    "layout": "${exception:format=@}"
                                }
                            ]
                        }
                    }
                }
            }
        },
        "rules": [
            {
                "logger": "*",
                "minLevel": "Trace",
                "writeTo": "File"
            }
        ]
    }
}
